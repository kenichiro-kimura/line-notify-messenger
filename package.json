{
  "name": "line-notify-messenger",
  "version": "1.0.0",
  "description": "A LINE Messaging API bot like LINE Notify service",
  "main": "src/handler.ts",
  "scripts": {
    "build": "esbuild src/lambdahandler.ts --bundle --outdir=dist --external:node:buffer --external:node:crypto --external:node:stream --external:@aws-sdk/client-s3 --external:@aws-sdk/s3-request-presigner --external:@aws-sdk --external:fs --external:stream --format=cjs",
    "cloudflare-build": "wrangler build",
    "cloudflare-dev": "wrangler dev",
    "cloudflare-deploy": "wrangler deploy --minify",
    "deploy": "cdk deploy '*'",
    "watch": "tsc -w",
    "test": "jest",
    "install-deps": "npm install",
    "destroy": "cdk destroy",
    "lint": "eslint --ext .ts ./",
    "prepare": "husky install"
  },
  "dependencies": {
    "@line/bot-sdk": "^9.5.3",
    "aws-cdk-lib": "^2.0.0",
    "aws-lambda-multipart-parser": "^0.1.3",
    "aws-sdk": "^2.1000.0",
    "constructs": "^10.0.0",
    "hono": "^4.7.5"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.744.0",
    "@aws-sdk/lib-dynamodb": "^3.767.0",
    "@aws-sdk/s3-request-presigner": "^3.744.0",
    "@azure/data-tables": "^13.3.0",
    "@azure/functions": "^4.6.1",
    "@azure/storage-blob": "^12.26.0",
    "@cloudflare/workers-types": "^4.20250320.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jimp": "^1.6.0",
    "lint-staged": "^15.4.3",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.5",
    "tsyringe": "^4.8.0",
    "typescript": "^4.0.0",
    "wrangler": "^4.3.0"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "LINE",
    "bot",
    "AWS",
    "Lambda",
    "DynamoDB"
  ],
  "author": "Your Name",
  "license": "MIT"
}
